<% var title = "shoya_baba_portfolio_TOP"; var description = "トップのshoya_baba_portfolio"; %> <% include
src/ejs/template/_head %>
<% include src/ejs/template/_header %>
<% var img_path='/assets/images/'; %>

<main class="l-top">
  <div class="l-top-siteImage">
    <div class="p-top-siteImage__textArea">
      <h2 class="p-top-siteImage__title">PortFolio<h2>
      <h2 class="p-top-siteImage__name">Shoya Baba<h2>
    </div>
  </div>

  <div class="l-top-intro">
    <div class="l-top-intro__container">
      <h1 class="p-top-intro__title" id="appear_intro">About</h1>
      <div class="p-top-intro__info">
        <img class="p-top-intro__infoImg" src="<%= img_path %>face_icon.jpeg" alt="人物のアイコン">
        <div class="p-top-intro__infoDetail">
          <h3 class="p-top-intro__infoName">馬場　翔矢（Shoya Baba）</h3>

          <% var intro_period=['1997/01/05', '2019/3', '2019/4 ~ 2019/6', '2019/6~', '2019/9', '2020/4', 'now']; %>
          <% var intro_text=
            ['birthday', '近畿大学 農学部卒業', '機械部品製造業、従事', 'ゲストハウススタッフ、youtube投稿、ライティング、ヒッチハイクを経て、自分の就きたい仕事を模索',
             'プログラミングを知って、webエンジニアへ向けての学習開始', '東京でSES事業を行っているベンチャー企業に入社', 'フロントエンドエンジニアを目指し日々、学習中'];
           %>

          <% for (var i=0; i < intro_text.length; i++) { %>
            <div class="p-top-intro__infoTextBlock">
              <p class="p-top-intro__infoText__peroid"><%= intro_period[i] %></p>
              <p class="p-top-intro__infoText__main"><%= intro_text[i] %></p>
            </div>
            <span class="p-top-intro__infoText__arrow">⇩</span>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="l-top-skills">
    <div class="l-top-skills__container">
      <h1 class="p-top-skills__title" id="appear_skills">Skills</h1>
      <p class="p-top-skills__text">扱うことの出来るスキルの一覧です。</p>
      <ul class="p-top-skills__detail">
        <% var skills=["HTML", "CSS", "Ruby", "JavaScript", "その他ツール"]; %>
        <% for (var i=0; i < skills.length; i++) { %>
          <li class="p-top-skills__detail__list">
            <img class="p-top-skills__detail__iconImg" src="<%= img_path %>skills/<%= skills[i] %>.png" alt="<%= skills[i] %>のアイコン">
            <p class="p-top-skills__detail__text"><%= skills[i] %></p>
            <% if(i < 1) { %>
            <% } else if(i < 2) { %>
              <div class="p-top-skills__hover">
                <img src="<%= img_path %>skills/sass.png" class="p-top-skills__hoverImg">
                <img src="<%= img_path %>skills/Bootstrap.png" class="p-top-skills__hoverImg">
              </div>
            <% } else if(i < 3) { %>
              <div class="p-top-skills__hover">
                <img src="<%= img_path %>skills/Rails.png" class="p-top-skills__hoverImg">
              </div>
            <% } else if(i < 4) { %>
              <div class="p-top-skills__hover">
                <img src="<%= img_path %>skills/jQuery.png" class="p-top-skills__hoverImg">
              </div>
            <% } else { %>
              <div class="p-top-skills__hover">
                <img src="<%= img_path %>skills/npm.png" class="p-top-skills__hoverImg">
                <img src="<%= img_path %>skills/webpack.png" class="p-top-skills__hoverImg">
              </div>
            <% } %>
          </li>
        <% } %>
      </ul>
      <p class="p-top-skills__expla"></p>
    </div>
  </div>

  <div class="l-top-production">
    <div class="l-top-production__container">
      <h1 class="p-top-production__title" id="appear_production">Production</h1>
      <p class="p-top-production__text">これまでに制作した、模写・LPなどの制作物の一覧です。</p>
      <ul class="p-top-production__item">
        <% var production_url=["ukulele-match-0105.herokuapp.com/", "piano"]; %>
        <% var production=["ukulele_match", "piano"]; %>
        <% var production_title=["マッチングアプリ", "piano"]; %>
        <% var production_period=["1ヶ月", "piano"]; %>
        <% var production_language=["HTML、CSS（Bootstrap）、Ruby、Rails", "piano"]; %>
        <% for (var i=0; i < production.length; i++) { %>
          <li class="p-top-production__itemList">
            <a href="https://<%= production_url[i] %>" target="_blank">
              <img src="<%= img_path %><%= production[i] %>.png" alt="作品の画像">
              <div class="p-top-production__hover">
                <div class="p-top-production__hover__container">
                  <h3>【<%= production_title[i] %>】</h3>
                  <p>・作成期間：<%= production_period[i] %></p>
                  <p>・使用言語：<%= production_language[i] %></p>
                </div>
              </div>
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>

  <div class="l-top-canDo">
    <div class="l-top-canDo__container">
      <h1 class="p-top-canDo__title" id="appear_canDo">Can do.</h1>
      <p class="p-top-canDo__text">現在、お受けする事のできる案件についてご紹介させていただきます。</p>
      <ul class="p-top-canDo__works">
        <% var works=["1", "2", "3"]; %>
        <% var work_title=["Webページ・LP制作", "2", "3"]; %>
        <% var work_text=
          ["LP作成・コーディングなどのWebサイト制作をお受けします。",
          "スマホ・タブレット・パソコン、などマルチデバイスにも対応いたします。どのデバイスであっても見やすい表示へと切り替えさせます。",
          ""];
        %>
        <% for (var i=0; i < works.length; i++) { %>
          <li class="p-top-canDo__work">
            <img class="p-top-canDo__workIcon" src="<%= img_path %>skills/<%= skills[i] %>.png" alt="案件イメージアイコン">
            <h3 class="p-top-canDo__workTitle"><%= work_title[i] %></h3>
            <p class="p-top-canDo__workText"><%= work_text[i] %></p>
          </li>
        <% } %>
      </ul>
    </div>
  </div>

  <div class="l-top-contact">
    <div class="l-top-contact__container">
      <h1 class="p-top-contact__title" id="appear_contact">Contact</h1>
      <p class="p-top-contact__text">お問い合わせはこちら（もしくは、フッターのTwitterアイコンからダイレクトメッセージお願いします。）</p>
      <div class="p-top-contact__block">
        <input class="p-top-contact__form" type="text" placeholder="姓">
        <input class="p-top-contact__form" type="text" placeholder="名">
        <input class="p-top-contact__form" type="text" placeholder="メールアドレス">
        <textarea class="p-top-contact__inquiry" name="comment" placeholder="お問い合わせ内容を記載ください。"></textarea>
        <a class="p-top-contact__btn" href="#">送信</a>
      </div>
    </div>
  </div>
</main>

